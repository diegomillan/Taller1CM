<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/separation"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_title"
        android:textColor="@color/colorLigthBlue"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/game_guess"
        android:layout_width="232dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/separation"
        app:srcCompat="@drawable/guess" />

    <EditText
        android:id="@+id/guesser_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separation"
        android:hint="@string/placeholder_guesser"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separation"
        android:text="@string/country_list"
        android:textColor="@color/colorLigthBlue"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/country"
        android:layout_width="232dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/separation"
        app:srcCompat="@drawable/countries" />


</LinearLayout>